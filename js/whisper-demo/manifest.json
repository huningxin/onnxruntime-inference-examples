{
    "name": "WebNN Whisper Extension",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "Polyfill Web Speech API by running Whisper Models locally with WebNN API",
    "action": {},
    "content_scripts": [
      {
        "matches": ["https://www.khanacademy.org/*", "https://www.google.com/intl/en/chrome/demos/speech.html"],
        "all_frames": true,
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["storage"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "web_accessible_resources": [{
        "resources": [
            "polyfill.js",
            "streaming_processor.js",
            "ort-wasm-simd-threaded.wasm",
            "ort-wasm-simd-threaded.jsep.wasm",
            "9aafb4d3326cefcb8809.wasm",
            "models/whisper_base_encoder_lm_fp16_layernorm_gelu.onnx",
            "models/whisper_base_decoder_static_non_kvcache_lm_fp16_layernorm_gelu_4dmask.onnx",
            "models/whisper_base_decoder_static_kvcache_128_lm_fp16_layernorm_gelu_4dmask.onnx",
            "models/openai/whisper-base/resolve/main/preprocessor_config.json",
            "models/openai/whisper-base/resolve/main/tokenizer.json",
            "models/openai/whisper-base/resolve/main/tokenizer_config.json"
        ],
        "matches": ["<all_urls>"]
    }],
    "externally_connectable": {
        "matches": ["<all_urls>"]
    },
    "options_page": "options.html"
  }